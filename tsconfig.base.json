{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "types": ["node"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@demo/booking-domain": ["libs/booking/domain/src/index.ts"],
      "@demo/booking-feature-search": [
        "libs/booking/feature-search/src/index.ts"
      ],
      "@demo/booking-ui-city": ["libs/booking/ui-city/src/index.ts"],
      "@demo/shared-ui-shell": ["libs/shared/ui-shell/src/index.ts"],
      "@demo/shared-util-shim": ["libs/shared/util-shim/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
